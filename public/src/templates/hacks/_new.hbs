<form class="form-horizontal">
  <div class="form-group">
    <label class="col-lg-2 control-label" for="new-hack-title">Name</label>
    <div class="col-lg-10">
      {{view Ember.TextField id="new-hack-title" placeholder="What is your hack called?" valueBinding="newTitle" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-2 control-label" for="new-hack-description">Description</label>
    <div class="col-lg-10">
      {{view Ember.TextArea id="new-hack-description" placeholder="Say something witty..." valueBinding="newDescription" rows="4" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
    <button type="submit" class="btn btn-primary" {{action "createHack"}}>SUBMIT</button>
    </div>
  </div>
</form>